<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>   
  
  <h2> <%= question_header(@test, @question) %> </h2>

  <p>
    <%= form.label :body %>
    <%= form.text_field :body, id: :question_body %>
  </p>
  
  <p><%= form.submit %></p>
<% end %>
