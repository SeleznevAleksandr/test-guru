<div class="card pt-4 col-6">
  <h5 class="card-header text-primary text-center">
      <strong>Form</strong>
  </h5>
  <div class="card-body px-lg-2">
    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <%= render 'shared/error_messages', resource: @badge %>   

      <p>
        <%= form.label :name %>
        <%= form.text_field :name, id: :badge_name, class: "form-control mb-4" %>
      </p>
      <p>  
        <%= form.label :level %>
        <%= form.text_field :level, id: :bagde_level, class: "form-control mb-4" %>
      </p>
      <p>  
        <%= form.label :category_id %>:
    	  <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
      </p>
      <p>  
        <%= form.label :test_passages_amount %>:
    	  <%= form.text_field :test_passages_amount, id: :badge_test_passages_amount, class: "form-control mb-4" %>
      </p>
      <p>
      <div class="custom-control custom-checkbox">
        <%= form.check_box :first_attempt, id: :badge_first_attempt, class: "custom-control-input" %>
        <%= form.label :first_attempt, class: "custom-control-label" %>:
      </div>
      </p>
      <p>
        <%= form.label :image_ref %>:
        <%= form.select("image_ref", options_for_select(images_list, 'image_ref')) %>
      </p>
      <p>
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
