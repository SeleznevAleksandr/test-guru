<tr>
  <td><%= test.title %></td>
  <td class='on_center'><%= test.level %></td>
  <td><%= test.category.title %>
  <td><%= test.author.username %></td>
  <td class='on_center'><%= questions_amount(test) %></td>
  <td><%= link_to t('main.show'), admin_test_path(test) %></td>
