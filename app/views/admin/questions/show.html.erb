<!DOCTYPE html>
<html>
  <body>
    <h1>Question with id:  <%= @question.id %></h1>
    <p><b><%= @question.body %></b></p>


    <h2>Answers</h2>
    <p><%= link_to 'New answer', new_admin_question_answer_path(@question) %></p>
    <ol>
      <%= render @question.answers.order(:created_at) %>
    </ol>

    <p><%= link_to 'Back', action: 'index', test_id: @question.test_id %></p>
  </body>
</html>
